@model BacSi
@{
    Layout = "_AdminLayout";
}
<form method="post">
    <div class="container shadow p-4 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Thêm Mới Bác Sĩ</h2>
            <hr />
        </div>

        @* Hiển thị tổng hợp lỗi nếu có *@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="HoTen" class="form-label">Họ và Tên</label>
            <input asp-for="HoTen" class="form-control" placeholder="Nhập họ tên bác sĩ" />
            <span asp-validation-for="HoTen" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="SoDienThoai" class="form-label">Số Điện Thoại</label>
                <input asp-for="SoDienThoai" class="form-control" />
                <span asp-validation-for="SoDienThoai" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="BangCap" class="form-label">Bằng Cấp / Học Hàm</label>
            <input asp-for="BangCap" class="form-control" placeholder="Ví dụ: Tiến sĩ, Thạc sĩ..." />
            <span asp-validation-for="BangCap" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="NamKinhNghiem" class="form-label">Số Năm Kinh Nghiệm</label>
            <input asp-for="NamKinhNghiem" class="form-control" type="number" />
            <span asp-validation-for="NamKinhNghiem" class="text-danger"></span>
        </div>

        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Tạo mới</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="BacSi" asp-action="Index" class="btn btn-secondary border form-control">
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}