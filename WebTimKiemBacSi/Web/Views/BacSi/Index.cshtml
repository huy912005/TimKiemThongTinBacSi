@model IEnumerable<BacSi>

<style>
    /* Màu nền tổng thể cho trang */
    body {
        background-color: #e9eff6; /* Màu xanh xám nhẹ giúp làm nổi bật khối nội dung */
    }

    /* Khối bao quanh bảng (Card) */
    .doctor-container {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08); /* Đổ bóng mạnh tạo chiều sâu */
        padding: 30px;
        margin-top: 40px;
    }

    /* Tiêu đề chính */
    .main-title {
        color: #4a90e2;
        font-weight: 700;
        font-size: 2.5rem;
        margin-bottom: 0;
    }

    /* Định dạng bảng */
    .table-custom {
        border-collapse: separate;
        border-spacing: 0 15px; /* Tạo khoảng cách giữa các dòng */
    }

        .table-custom thead th {
            background-color: #2c3e50; /* Màu đầu bảng đậm chuyên nghiệp */
            color: white;
            border: none;
            padding: 15px;
            text-transform: uppercase;
            font-size: 0.9rem;
        }

        .table-custom tbody tr {
            background-color: #f8f9fc; /* Màu nền nhẹ cho từng dòng */
            transition: transform 0.2s;
            box-shadow: 0 4px 6px rgba(0,0,0,0.02);
        }

            .table-custom tbody tr:hover {
                transform: scale(1.01); /* Hiệu ứng nổi nhẹ khi di chuột qua */
                background-color: #ffffff;
            }

        .table-custom td {
            border: none;
            padding: 15px;
            vertical-align: middle;
        }

            /* Bo góc cho dòng đầu và cuối */
            .table-custom td:first-child, .table-custom th:first-child {
                border-radius: 12px 0 0 12px;
            }

            .table-custom td:last-child, .table-custom th:last-child {
                border-radius: 0 12px 12px 0;
            }

    /* Nút thêm mới */
    .btn-add-new {
        background: linear-gradient(135deg, #6e8efb, #a777e3);
        border: none;
        border-radius: 50px;
        padding: 10px 25px;
        color: white;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(110, 142, 251, 0.3);
    }

    /* Ảnh bác sĩ */
    .doctor-img {
        width: 55px;
        height: 55px;
        object-fit: cover;
        border: 3px white solid;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }
</style>

<div class="container pb-5">
    <div class="doctor-container">
        <div class="row align-items-center mb-4">
            <div class="col-md-6">
                <h1 class="main-title">Danh Sách Bác Sĩ</h1>
            </div>
            <div class="col-md-6 text-end">
                <a class="btn btn-add-new" asp-controller="BacSi" asp-action="Create">
                    <i class="bi bi-plus-circle-fill me-2"></i> Thêm Bác Sĩ Mới
                </a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-custom">
                <thead>
                    <tr>
                        <th class="text-center">Ảnh</th>
                        <th>Họ và Tên</th>
                        <th>Chuyên Môn</th>
                        <th class="text-center">Kinh Nghiệm</th>
                        <th class="text-center">Trạng Thái</th>
                        <th class="text-center">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                <img src="~/images/@item.AnhDaiDien" class="rounded-circle doctor-img" />
                            </td>
                            <td>
                                <div class="fw-bold text-dark">@item.HoTen</div>
                                <small class="text-muted">ID: #@item.IdBacSi</small>
                            </td>
                            <td>
                                <span class="text-dark">@item.BangCap</span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-light text-dark border">@item.NamKinhNghiem năm</span>
                            </td>
                            <td class="text-center">
                                @if (item.TrangThai == 1)
                                {
                                    <span class="badge rounded-pill bg-success px-3 py-2">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-danger px-3 py-2">Khóa</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm rounded">
                                    <a asp-controller="BacSi" asp-action="Edit" asp-route-id="@item.IdBacSi"
                                       class="btn btn-white text-primary btn-sm border-end" title="Sửa">
                                        <i class="bi bi-pencil-square fs-5"></i>
                                    </a>
                                    <a asp-controller="BacSi" asp-action="Delete" asp-route-id="@item.IdBacSi"
                                       class="btn btn-white text-danger btn-sm" title="Xóa">
                                        <i class="bi bi-trash-fill fs-5"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>