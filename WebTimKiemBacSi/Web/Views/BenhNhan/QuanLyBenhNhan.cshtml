@model IEnumerable<BenhNhan>
@{
    Layout = "_AdminLayout";
}
<link rel="stylesheet" href="~/css/benhNhan.css" />
<div class="container pb-5">
    <div class="patient-container">
        <div class="row align-items-center mb-4">
            <div class="col-md-6">
                <h1 class="main-title">Quản Lý Bệnh Nhân</h1>
            </div>
            <div class="col-md-6 text-end">
                <div class="input-group w-50 ms-auto shadow-sm rounded-pill overflow-hidden">
                    <input type="text" class="form-control border-0 ps-4" placeholder="Tìm tên bệnh nhân...">
                    <button class="btn btn-white border-0 text-muted px-3"><i class="bi bi-search"></i></button>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-custom">
                <thead>
                    <tr>
                        <th class="text-center" style="width: 80px;">ID</th>
                        <th>Thông Tin Cơ Bản</th>
                        <th>Liên Hệ & Địa Chỉ</th>
                        <th class="text-center">Ngày Đăng Ký</th>
                        <th class="text-center">Trạng Thái</th>
                        <th class="text-center">Thao Tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold text-muted">
                                #@item.IdBenhNhan
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="patient-icon me-3">
                                        <i class="bi bi-person-fill"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@item.HoTen</div>
                                        @if (item.GioiTinh == "Nam")
                                        {
                                            <span class="badge bg-primary-subtle text-primary badge-gender">Nam</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-subtle text-danger badge-gender">Nữ</span>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="small"><i class="bi bi-envelope-fill me-2 text-muted"></i>@item.Email</div>
                                <div class="small mt-1"><i class="bi bi-geo-alt-fill me-2 text-muted"></i>@(item.soNhaTenDuong ?? "Chưa cập nhật")</div>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-light text-dark border px-3 py-2">
                                    @(item.NgayDangKy?.ToString("dd/MM/yyyy") ?? "N/A")
                                </span>
                            </td>
                            <td class="text-center">
                                @if (item.TrangThai == 1)
                                {
                                    <span class="badge rounded-pill bg-success px-3 py-2 text-white">Hoạt động</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-secondary px-3 py-2 text-white">Khóa</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm rounded">
                                    <a href="#" class="btn btn-white text-primary btn-sm border-end" title="Xem chi tiết">
                                        <i class="bi bi-eye-fill fs-5"></i>
                                    </a>
                                    <button onclick="lockPatient(@item.IdBenhNhan)" class="btn btn-white text-warning btn-sm border-end" title="Khóa/Mở khóa">
                                        <i class="bi bi-lock-fill fs-5"></i>
                                    </button>
                                    <a href="#" class="btn btn-white text-danger btn-sm" title="Xóa">
                                        <i class="bi bi-trash-fill fs-5"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>