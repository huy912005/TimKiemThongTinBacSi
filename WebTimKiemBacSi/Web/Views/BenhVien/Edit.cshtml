@model Web.Models.BenhVien
@{
    ViewData["Title"] = "Chỉnh Sửa Bệnh Viện";
    Layout = "_AdminLayout";
}

<style>
    /* Kế thừa các style từ trang Create */
    .form-container {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        padding: 40px;
        margin-top: 20px;
    }

    .form-title {
        color: #2196F3;
        font-weight: 700;
        margin-bottom: 30px;
        border-bottom: 2px solid #f1f5f9;
        padding-bottom: 15px;
    }

    .form-label {
        font-weight: 600;
        color: #475569;
        margin-bottom: 8px;
    }

    .input-group-text {
        background-color: #f8fafc;
        border: 1px solid #e2e8f0;
        color: #2196F3;
        border-radius: 12px 0 0 12px !important;
    }

    .form-control, .form-select {
        border: 1px solid #e2e8f0;
        border-radius: 12px !important;
        padding: 12px 15px;
    }

        .form-control:focus {
            border-color: #2196F3;
            box-shadow: 0 0 0 3px rgba(33, 150, 243, 0.1);
        }

    .btn-update {
        background: linear-gradient(135deg, #2196F3, #00BCD4);
        border: none;
        border-radius: 50px;
        padding: 12px 35px;
        color: white;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(33, 150, 243, 0.3);
    }

    .btn-back {
        border-radius: 50px;
        padding: 12px 35px;
        font-weight: 600;
    }
</style>

<div class="container pb-5">
    <div class="form-container">
        <h2 class="form-title"><i class="bi bi-pencil-square me-2"></i> Chỉnh Sửa Thông Tin Bệnh Viện</h2>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="IdBenhVien" />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row g-4">
                <div class="col-md-12">
                    <label asp-for="TenBenhVien" class="form-label">Tên Bệnh Viện</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-building"></i></span>
                        <input asp-for="TenBenhVien" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="HotLine" class="form-label">Hotline</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                        <input asp-for="HotLine" class="form-control" />
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
                <div class="col-md-8">
                    <label asp-for="DiaDiem" class="form-label">Địa chỉ (Số nhà, đường)</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                        <input asp-for="DiaDiem" class="form-control" />
                    </div>
                </div>
                <div class="col-md-4">
                    <label asp-for="IdPhuongXa" class="form-label">Phường / Xã</label>
                    <select asp-for="IdPhuongXa" class="form-select" asp-items="@(new SelectList(ViewBag.PhuongXaList, "IdPhuongXa", "TenPhuongXa"))">
                    </select>
                </div>
                <div class="col-md-12">
                    <label asp-for="MoTa" class="form-label">Mô tả chi tiết</label>
                    <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
                </div>
            </div>
            <div class="mt-5 d-flex gap-3">
                <button type="submit" class="btn btn-update">
                    <i class="bi bi-save me-2"></i> Cập Nhật Thông Tin
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-back"> Quay Lại</a>
            </div>
        </form>
    </div>
</div>