<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hệ thống Quản trị</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-collapsed-width: 75px;
            --sidebar-bg: #1e293b;
            --accent-color: #38bdf8;
            --main-bg: #f1f5f9;
        }

        body {
            background-color: var(--main-bg);
            overflow-x: hidden;
            margin: 0;
        }

        .admin-container {
            display: flex;
            min-height: 100vh;
        }

        /* --- SIDEBAR STYLE --- */
        .sidebar-left {
            width: var(--sidebar-width);
            background: var(--sidebar-bg);
            color: white;
            position: sticky;
            top: 0;
            height: 100vh;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            z-index: 1000;
            display: flex;
            flex-direction: column;
        }

            .sidebar-left.collapsed {
                width: var(--sidebar-collapsed-width);
            }

                .sidebar-left.collapsed .menu-text,
                .sidebar-left.collapsed .sidebar-menu-label,
                .sidebar-left.collapsed .logo-text span {
                    display: none;
                }

                .sidebar-left.collapsed .nav-link {
                    justify-content: center;
                    padding: 15px 0;
                }

                    .sidebar-left.collapsed .nav-link i {
                        margin-right: 0;
                        font-size: 1.4rem;
                    }

        .sidebar-header {
            padding: 20px;
            background: rgba(0,0,0,0.2);
            display: flex;
            align-items: center;
            justify-content: space-between;
            height: 70px;
        }

        .sidebar-menu-label {
            padding: 20px 20px 10px;
            font-size: 0.7rem;
            text-transform: uppercase;
            color: #64748b;
            letter-spacing: 1px;
            font-weight: bold;
        }

        .nav-admin .nav-link {
            color: #94a3b8;
            padding: 12px 25px;
            display: flex;
            align-items: center;
            transition: 0.2s;
            border-left: 4px solid transparent;
            text-decoration: none;
        }

            .nav-admin .nav-link:hover {
                background: rgba(255,255,255,0.05);
                color: white;
            }

            .nav-admin .nav-link.active {
                background: rgba(56, 189, 248, 0.1);
                color: var(--accent-color);
                border-left-color: var(--accent-color);
            }

        /* --- MAIN CONTENT STYLE --- */
        .main-wrapper {
            flex: 1;
            transition: all 0.3s;
            min-width: 0;
        }

        .content-top-bar {
            background: white;
            padding: 0 30px;
            height: 70px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 99;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <aside class="sidebar-left shadow" id="sidebar">
            <div class="sidebar-header">
                <h5 class="mb-0 fw-bold text-info logo-text">
                    <i class="bi bi-shield-lock-fill"></i> <span>ADMIN PANEL</span>
                </h5>
            </div>

            <div class="nav-admin mt-2 flex-grow-1">
                <div class="sidebar-menu-label">Thống kê</div>
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")"
                   asp-controller="TaiKhoan" asp-action="Dashboard">
                    <i class="bi bi-speedometer2"></i> <span class="menu-text">Dashboard</span>
                </a>

                <div class="sidebar-menu-label">Quản lý người dùng</div>
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")"
                   asp-controller="BacSi" asp-action="Index">
                    <i class="bi bi-person-badge"></i> <span class="menu-text">Quản lý Bác sĩ</span>
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "QuanLyBenhNhan" ? "active" : "")"
                   asp-controller="BenhNhan" asp-action="QuanLyBenhNhan">
                    <i class="bi bi-people"></i> <span class="menu-text">Quản lý Bệnh nhân</span>
                </a>

                <div class="sidebar-menu-label">Quản lý cơ sở</div>
                <a class="nav-link" asp-controller="BenhVien" asp-action="Index">
                    <i class="bi bi-hospital"></i> <span class="menu-text">Bệnh viện</span>
                </a>
                <a class="nav-link" href="#"><i class="bi bi-geo-alt"></i> <span class="menu-text">Phường xã</span></a>

                <div class="sidebar-menu-label">Hệ thống</div>
                <a class="nav-link" href="#"><i class="bi bi-megaphone"></i> <span class="menu-text">Thông báo</span></a>
                <a class="nav-link" href="#"><i class="bi bi-flag"></i> <span class="menu-text">Báo cáo vi phạm</span></a>
                <a class="nav-link" href="#"><i class="bi bi-star"></i> <span class="menu-text">Đánh giá</span></a>
            </div>
        </aside>

        <main class="main-wrapper">
            <div class="content-top-bar shadow-sm">
                <div class="d-flex align-items-center">
                    <button class="btn btn-light rounded-circle me-3" onclick="toggleSidebar()">
                        <i class="bi bi-list fs-4"></i>
                    </button>
                    <h4 class="fw-bold mb-0 text-dark">@ViewData["Title"]</h4>
                </div>

                <div class="d-flex align-items-center">
                    <button class="btn btn-danger rounded-pill px-4 shadow-sm me-3" data-bs-toggle="modal" data-bs-target="#modalGuiThongBao">
                        <i class="bi bi-megaphone-fill me-2"></i>Gửi thông báo mới
                    </button>
                    <div class="dropdown">
                        <div class="d-flex align-items-center" style="cursor:pointer" data-bs-toggle="dropdown">
                            <div class="text-end me-2 d-none d-sm-block">
                                <div class="fw-bold small text-dark">@User.Identity.Name</div>
                                @if (User.IsInRole("CanBoHanhChinh"))
                                {
                                    <span class="badge bg-info-subtle text-info x-small" style="font-size: 0.65rem;">CanBoHanhChinh</span>
                                }
                            </div>
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center shadow-sm" style="width: 38px; height: 38px;">
                                <i class="bi bi-person-badge-fill fs-5"></i>
                            </div>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 py-2" style="min-width: 220px; border-radius: 12px;">
                            <li class="px-3 py-2 d-sm-none">
                                <div class="fw-bold text-dark">@User.Identity.Name</div>
                                <small class="text-muted">Quản trị viên</small>
                                <hr class="dropdown-divider">
                            </li>

                            <li>
                                <a class="dropdown-item py-2" asp-controller="TaiKhoan" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2 me-2 text-primary"></i>Dashboard Tổng quan
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item py-2" asp-controller="TaiKhoan" asp-action="TaiKhoanCaNhan">
                                    <i class="bi bi-person-gear me-2 text-secondary"></i>Hồ sơ cá nhân
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item py-2" href="#">
                                    <i class="bi bi-shield-check me-2 text-success"></i>Bảo mật tài khoản
                                </a>
                            </li>

                            <li><hr class="dropdown-divider"></li>

                            <li>
                                <a class="dropdown-item py-2 text-danger" asp-controller="TaiKhoan" asp-action="DangXuat">
                                    <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất hệ thống
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="p-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');
            localStorage.setItem('sidebarStatus', sidebar.classList.contains('collapsed') ? 'closed' : 'open');
        }
        document.addEventListener("DOMContentLoaded", function() {
            if (localStorage.getItem('sidebarStatus') === 'closed') {
                document.getElementById('sidebar').classList.add('collapsed');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>