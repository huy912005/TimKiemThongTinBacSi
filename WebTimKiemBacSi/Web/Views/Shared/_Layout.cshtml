<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tìm kiếm bác sĩ</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse-fill me-2"></i>TÌM KIẾM BÁC SĨ
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">TRANG CHỦ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="BacSi" asp-action="Index">DANH SÁCH BÁC SĨ</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold text-primary" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i> @User.Identity.Name
                                    <span class="badge bg-info-subtle text-info small">@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                    @if (User.IsInRole("CanBoHanhChinh"))
                                    {
                                        <li><a class="dropdown-item fw-bold text-primary" asp-controller="TaiKhoan" asp-action="Dashboard"><i class="bi bi-graph-up me-2"></i>Trang Quản Trị</a></li>
                                        <li><a class="dropdown-item" asp-controller="BacSi" asp-action="Index"><i class="bi bi-person-badge me-2"></i>Quản lý Bác sĩ</a></li>
                                        <li><a class="dropdown-item" asp-controller="TaiKhoan" asp-action="QuanLyBenhNhan"><i class="bi bi-people me-2"></i>Quản lý Bệnh nhân</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li><a class="dropdown-item" asp-action="TaiKhoanCaNhan"><i class="bi bi-gear me-2"></i>Cài đặt tài khoản</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="TaiKhoan" asp-action="DangXuat">
                                            <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-primary rounded-pill px-4 me-2" asp-controller="TaiKhoan" asp-action="DangNhap">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary rounded-pill px-4 shadow-sm" asp-controller="TaiKhoan" asp-action="DangKy">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-muted text-center py-3 border-top bg-white">
        <div class="container">
            &copy; 2025 - <strong>Hệ Thống Tìm Kiếm Bác Sĩ</strong>
            &nbsp;&nbsp;&nbsp;
            <br/>
            <a style="text-decoration: none" href="https://github.com/huy912005/TimKiemThongTinBacSi" class="github-link" target="_blank">
                <i class="bi bi-github me-1"></i> Mã nguồn trên GitHub
            </a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>