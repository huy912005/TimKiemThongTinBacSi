@using WebTimKiemBacSi.ViewModel
@model DangKyViewModel

<div class="container d-flex justify-content-center py-5">
    <div class="card shadow-lg p-4 border-0 rounded-4" style="width: 550px; background: #ffffff;">
        <div class="text-center mb-4">
            <h2 class="text-primary fw-bold">Tạo Tài Khoản Mới</h2>
            <p class="text-muted">Tham gia hệ thống tìm kiếm bác sĩ ngay hôm nay</p>
        </div>

        <form asp-action="DangKy" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-4 text-center">
                <label class="form-label d-block fw-bold mb-3">Bạn đăng ký với tư cách là:</label>
                <div class="btn-group w-100" role="group">
                    <input type="radio" class="btn-check" name="Role" id="roleBN" value="BenhNhan" checked>
                    <label class="btn btn-outline-primary py-2" for="roleBN">Bệnh nhân</label>

                    <input type="radio" class="btn-check" name="Role" id="roleBS" value="BacSi">
                    <label class="btn btn-outline-primary py-2" for="roleBS">Bác sĩ</label>

                    <input type="radio" class="btn-check" name="Role" id="roleCB" value="CanBo">
                    <label class="btn btn-outline-primary py-2" for="roleCB">Cán bộ HC</label>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="HoTen" class="form-label text-muted small fw-bold">Họ và Tên</label>
                <input asp-for="HoTen" class="form-control rounded-pill px-3" placeholder="Nguyễn Văn A" />
                <span asp-validation-for="HoTen" class="text-danger small"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label text-muted small fw-bold">Email</label>
                    <input asp-for="Email" class="form-control rounded-pill px-3" placeholder="email@gmail.com" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="SoDienThoai" class="form-label text-muted small fw-bold">Số điện thoại</label>
                    <input asp-for="SoDienThoai" class="form-control rounded-pill px-3" placeholder="090..." />
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="MatKhau" class="form-label text-muted small fw-bold">Mật khẩu</label>
                <input asp-for="MatKhau" class="form-control rounded-pill px-3" />
                <span asp-validation-for="MatKhau" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 fw-bold shadow">
                ĐĂNG KÝ TÀI KHOẢN
            </button>

            <div class="text-center mt-3 small">
                Đã có tài khoản? <a asp-action="DangNhap" class="text-decoration-none">Đăng nhập ngay</a>
            </div>
        </form>
    </div>
</div>