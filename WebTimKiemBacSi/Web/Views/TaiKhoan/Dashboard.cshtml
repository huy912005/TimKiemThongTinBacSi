@using WebTimKiemBacSi.Models
@model IEnumerable<ThongKeTimKiem>
@{
    ViewData["Title"] = "Dashboard Thống Kê";
}

<div class="container-fluid py-4">
    <h2 class="mb-4 fw-bold text-primary"><i class="bi bi-speedometer2 me-2"></i>Hệ thống Quản trị</h2>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white shadow-sm border-0 rounded-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase small">Tổng Bác sĩ</h6>
                        <h2 class="mb-0">@ViewBag.TotalBacSi</h2>
                    </div>
                    <i class="bi bi-person-badge fs-1 opacity-50"></i>
                </div>
                <a asp-controller="BacSi" asp-action="Index" class="card-footer text-white text-decoration-none small">Xem chi tiết <i class="bi bi-arrow-right"></i></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white shadow-sm border-0 rounded-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase small">Tổng Bệnh nhân</h6>
                        <h2 class="mb-0">@ViewBag.TotalBenhNhan</h2>
                    </div>
                    <i class="bi bi-people fs-1 opacity-50"></i>
                </div>
                <a asp-action="QuanLyBenhNhan" class="card-footer text-white text-decoration-none small">Xem chi tiết <i class="bi bi-arrow-right"></i></a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white shadow-sm border-0 rounded-3">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-uppercase small">Lượt tìm kiếm</h6>
                        <h2 class="mb-0">@ViewBag.TotalTimKiem</h2>
                    </div>
                    <i class="bi bi-search fs-1 opacity-50"></i>
                </div>
                <div class="card-footer small opacity-75">Cập nhật: @DateTime.Now.ToString("dd/MM/yyyy")</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-white fw-bold">Top 10 Từ khóa tìm kiếm nhiều nhất</div>
                <div class="card-body">
                    <canvas id="searchChart" style="min-height: 300px;"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm border-0 rounded-3 h-100">
                <div class="card-header bg-white fw-bold">Chi tiết xu hướng</div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Từ khóa</th>
                                <th>Lượt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TuKhoa</td>
                                    <td class="text-primary fw-bold">@item.SoLuotTim</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('searchChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.Select(m => m.TuKhoa))),
                datasets: [{
                    label: 'Số lượt tìm kiếm',
                    data: @Html.Raw(Json.Serialize(Model.Select(m => m.SoLuotTim))),
                    backgroundColor: 'rgba(74, 144, 226, 0.6)',
                    borderColor: 'rgba(74, 144, 226, 1)',
                    borderWidth: 1,
                    borderRadius: 5
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: { y: { beginAtZero: true } }
            }
        });
    </script>
}