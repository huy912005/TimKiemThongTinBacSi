@using WebTimKiemBacSi.ViewModel
@model TaiKhoanCaNhanVM
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0"><i class="bi bi-person-gear me-2"></i>Thông Tin Cá Nhân</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="TaiKhoanCaNhan" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Role" />

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Họ và Tên</label>
                                <input asp-for="HoTen" class="form-control bg-light" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Email</label>
                                <input asp-for="Email" class="form-control bg-light" readonly />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Số điện thoại</label>
                                <input asp-for="SoDienThoai" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">CCCD</label>
                                <input asp-for="CCCD" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giới tính</label>
                                <select asp-for="GioiTinh" class="form-select">
                                    <option value="">Chọn giới tính</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Phường xã</label>
                                <select asp-for="IdPhuongXa" asp-items="Model.PhuongXaList" class="form-select">
                                    <option value="">-- Chọn Phường Xã --</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Số nhà, tên đường</label>
                            <input asp-for="soNhaTenDuong" class="form-control" placeholder="Ví dụ: 123 Nguyễn Lương Bằng" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">Quay lại</a>
                            <button type="submit" class="btn btn-primary px-5 rounded-pill shadow-sm">Lưu cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>